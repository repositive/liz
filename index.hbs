{{!< default}}

{{> nav}}
{{> header}}

<main class="main-liz" role="main">

  {{#foreach posts}}

    <article class="article-liz" role="article" itemscope itemtype="http://schema.org/Article">
      <header class="postheader-liz">
        <time class="date-liz" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
          {{date format='dddd DD MMM YYYY'}}
        </time>
        <h1 class="posttitle-liz" itemprop="headline"><a href="{{{url}}}" rel="bookmark">
          {{title}}
        </a></h1>
      </header>
      <div class="postcontent-liz" itemprop="articleBody">
        {{content}}
      </div>
      {{#if tags}}
        <div class="posttags-liz">
          Tags: {{tags separator=" | "}}
        </div>
      {{/if}}
    </article>

  {{/foreach}}


  {{#if pagination}}
    <div class="pagination-liz">
      {{{pagination}}}
    </div>
  {{/if}}

</main>

{{> footer}}
