<div class="grid">
  <div class="grid__col grid__col--1-of-2">
    <h4>Share this post</h4>
  </div>

  <div class="grid__col grid__col--1-of-2 u-ta--right">
    <a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
        <img class="c-img--unit o-sp-right--tiny" src="{{asset 'images/icons/social-grey/twitter@3x.png'}}" />
    </a>
    <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        <img class="c-img--unit o-sp-right--tiny" src="{{asset 'images/icons/social-grey/facebook@3x.png'}}" />
    </a>
    <a href="https://plus.google.com/share?url={{url absolute="true"}}"
       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
       <img class="c-img--unit o-sp-right--tiny" src="{{asset 'images/icons/social-grey/google-plus@3x.png'}}" />
    </a>
    <a href="http://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}"
        onclick="window.open(this.href, 'linkedin-share', 'width=590,height=420');return false;">
      <img class="c-img--unit o-sp-right--tiny" src="{{asset 'images/icons/social-grey/linkedin@3x.png'}}" />
    </a>
  </div>

</div>
